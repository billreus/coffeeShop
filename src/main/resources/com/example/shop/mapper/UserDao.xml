<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.shop.dao.UserDao">
    <!--插入用户-->
    <insert id="insert" parameterType="com.example.shop.dao.entity.UserEntity">
        INSERT INTO
        shop_user(id,username,password,gender,birthday,last_login_time,user_level,nickname,mobile,avatar,weixin_openid,
        session_key,status,add_time,update_time,deleted)
        VALUES(#{id},#{username},#{password},#{gender},#{birthday},#{last_login_time},#{user_level},#{nickname},
               #{mobile},#{avatar},#{weixin_openid},#{session_key},#{status},#{add_time},#{update_time},#{deleted});
    </insert>

    <!--更新用户-->
    <update id="update" parameterType="com.example.shop.dao.entity.UserEntity">
        UPDATE shop_user
        SET id=#{id},username=#{username},password=#{password},gender=#{gender},birthday=#{birthday},
            last_login_time=#{last_login_time},user_level=#{user_level},nickname=#{nickname},mobile=#{mobile},
            avatar=#{avatar},weixin_openid=#{weixin_openid},session_key=#{session_key},status=#{status},
            add_time=#{add_time},update_time=#{update_time},deleted=#{deleted}
        WHERE id=#{id}
    </update>
    <!--更新密码-->
    <update id="updatePasswordById" parameterType="com.example.shop.dao.entity.UserEntity">
        UPDATE shop_user
        SET password=#{password}
        WHERE id=#{id}
    </update>

    <!--通过id查询-->
    <select id="selectById" resultType="com.example.shop.dao.entity.UserEntity" parameterType="java.lang.Integer">
        SELECT *
        FROM shop_user
        WHERE id=#{id};
    </select>
    <!--通过用户名查询-->
    <select id="selectByUserName" resultType="com.example.shop.dao.entity.UserEntity">
        SELECT *
        FROM shop_user
        WHERE username=#{username};
    </select>
    <!--查询所有用户-->
    <select id="findAllList" resultType="com.example.shop.dao.entity.UserEntity">
        SELECT *
        FROM shop_user
        ORDER BY id=#{id};
    </select>
    <!--查询用户总数-->
    <select id="findAllCount" resultType="com.example.shop.dao.entity.UserEntity">
        SELECT
            COUNT(1)
        FROM shop_user
        WHERE shop_user.status = '0'
    </select>

    <!--物理删除用户-->
    <delete id="delete" parameterType="java.lang.Integer">
        DELETE FROM shop_user
        WHERE id=#{id}
    </delete>
    <!-- 禁用 -->
    <update id="deleteByLogic">
        UPDATE shop_user SET
            shop_user.status = '1'
        WHERE id = #{id}
    </update>
    <!-- 启用 -->
    <update id="use">
        UPDATE shop_user SET
            shop_user.status = '0'
        WHERE id = #{id}
    </update>
</mapper>